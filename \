import React from 'react';



export default class Calendar extends React.Component {
  constructor() {
    super();
    this.state = {
      done: false
    }
    this.handleClick = this.handleClick.bind(this)
  }

  handleClick() {
    setTimeOut(() => this.setState({done: true}), 5000)
  }

  render() {
    return (
      <div className="offset-4 col-md-6">
        <h1>Welcome to Calendaring</h1> 
        <p><em>The dopest Calendar App you never knew you needed.</em></p>
        <p>Click this <button onClick={this.handleClick}>Button</button> and take 5 seconds to imagine what you'd want to see here...</p>
      </div>
    )
  }
}
